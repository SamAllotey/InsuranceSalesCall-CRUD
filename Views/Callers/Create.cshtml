@model MariaAndSonsInsLtd.Models.Caller

@{
    ViewData["Title"] = "Create";
}

<h4>Add Caller</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CallerId" class="control-label"></label>
                <input asp-for="CallerId" class="form-control" placeholder="Enter Caller Name"/>
                <span asp-validation-for="CallerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallDate" class="control-label"></label>
                <input asp-for="CallDate" class="form-control" />
                <span asp-validation-for="CallDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallerName" class="control-label"></label>
                <input asp-for="CallerName" class="form-control" placeholder="Enter Caller Name"/>
                <span asp-validation-for="CallerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallDuration" class="control-label"></label>
                <input asp-for="CallDuration" class="form-control" placeholder="Enter Call Duration"/>
                <span asp-validation-for="CallDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallDestinationNumber" class="control-label"></label>
                <input asp-for="CallDestinationNumber" class="form-control" placeholder="Enter Call Destination Number"/>
                <span asp-validation-for="CallDestinationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallCost" class="control-label"></label>
                <input asp-for="CallCost" class="form-control" placeholder="Enter Call Cost"/>
                <span asp-validation-for="CallCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallType" class="control-label"></label>
                    <select class="form-control" aria-label="Select Call Type">
                      <option selected>--Select Call Type--</option>
                      <option value="1">Local</option>
                      <option value="2">Foreign</option>
                     </select>
                <span asp-validation-for="CallType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallPlan" class="control-label"></label>
                <select class="form-control" aria-label="Select Call Plan">
                      <option selected>--Select Call Plan--</option>
                      <option value="1">Cell</option>
                      <option value="2">Fixed</option>
                     </select>
                <span asp-validation-for="CallPlan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
